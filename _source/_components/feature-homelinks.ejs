<style>body { background: #f4f4f4; }</style>
<div style="font-size:14px; padding: 2em 0 2px;">
<div class="container">
    <div class="content-links row">
        <div class="col-sm-4 col-md-3">
            <div class="task stethoscope">
                <a href="/conditionslist/index" class="">
                    <span class="header">Help with a new medical problem</span><br>
                    <span class="subheader">Find out what to do about your problem, and if you need the doctor</span>
                </a>
            </div>
        </div>
        <div class="col-sm-4 col-md-3">
            <div class="task heartbeat">
                <span class="header">Conditions and treatments</span><br>
                <span class="subheader">Help decide if you have a condition, and how to manage it</span>
            </div>
        </div>
        <div class="col-sm-4 col-md-3">
            <a class="task calendar" href="#0">
                <span class="header">Find, book and manage NHS Services</span><br>
                <span class="subheader">Book and manage all your NHS appointments</span>
            </a>
        </div>
        <div class="col-sm-4 col-md-3">
            <a href="#0" class="task health">
                <span class="header">Improve my health</span><br>
                <span class="subheader">Take steps to improve your own health</span>
            </a>
        </div>
        <div class="col-sm-4 col-md-3">
            <div class="task pregnancy">
                <span class="header">Pregnancy and baby</span><br>
                <span class="subheader">What to expect, and trusted NHS advice</span>
            </div>
        </div>
        <div class="col-sm-4 col-md-3">
            <div class="task medicines">
                <span class="header">Medicines</span><br>
                <span class="subheader">All about medicines</span>
            </div>
        </div>
        <div class="col-sm-4 col-md-3">
            <div class="task social">
                <span class="header">Care and support</span><br>
                <span class="subheader">Information and support for social care</span>
            </div>
        </div>
        <div class="col-sm-4 col-md-3">
            <div class="task travel">
                <span class="header">Travel Medicines</span><br>
                <span class="subheader">EHIC, Vaccinations</span>
            </div>
        </div>
    </div>
    <div class="content-links row content-links-multicolour">
        <% var tasks = [
            {
                "title": "Help with a new medical problem",
                "icon": "stethoscope",
                "links": ["Check my symptoms",
                "Do I need to see the doctor",
                "Do I have a specific condition"]
            },
            {
                "title": "Conditions and treatments",
                "icon": "heartbeat",
                "links": ["Chickenpox",
                "Abdominal pain",
                "Headache"],
                "personalLinks": ["Managing an aacute asthma attack", 
                "Record your blood glucose for today"]
            },
            {
                "title": "Find, book and manage NHS Services",
                "icon": "calendar",
                "links": [
                "Book a GP appointment",
                "Find an NHS service",
                "Tell us about your experience"],
                "personalLinks": ["Book appointment at Riverside Surgery",
                "Tell us how Taunton Hospital was last week",
                "My recent GP visits experience"]
            },
            {
                "title": "Improve my health",
                "icon": "health",
                "links": ["Take a health check",
                "Help to stop smoking",
                "How do I lose weight?"],
                "personalLinks": ["Record your weight this week",
                "See my weight loss progress",
                "This week's healthy eating programme"]
            },
            {
                "title": "Pregnancy & Baby",
                "icon": "pregnancy",
                "links": ["Am I pregnant?",
                "What to expect",
                "Creating a birth plan"]
            },
            {
                "title": "Care & support",
                "icon": "social",
                "links": ["How to choose a care home",
                "What social care support is available?",
                "Carers hub"]
            },
            {
                "title": "Travel medicines",
                "icon": "travel",
                "links": ["Apply for an EHIC",
                "What vaccinations do I need?",
                "How to stay healthy abroad"]
            }
        ];
        tasks.forEach(function (task) { %>
            <div class="col-sm-4 col-md-3">
                <div class="task">
                    <div class="task__content">
                        <span class="task__header">
                            <a href="#">
                                <span class="task__icon task__icon--<%= task.icon %>"></span>
                                <span class="task__title"><%= task.title %></span>
                            </a>
                        </span>
                        <div class="task__links">
                            <% if (task.personalLinks) { %>
                                <ul class="task__links__list--personalised">
                                <% task.personalLinks.forEach(function(link) { %>
                                    <li><a href="#"><%= link %></a></li>
                                <% }) %>
                                </ul>
                            <% } %>
                            <ul>
                                <% task.links.forEach(function(link) { %>
                                    <li><a href="#"><%= link %></a></li>
                                <% }) %>
                            </ul>
                            <div class="task__all">
                                <a href="#">See all topics <span aria-hidden="true" class="glyphicon glyphicon-menu-right"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
</div>
