<header class="navbar navbar-default navbar-static-top siteHeader">
  <div class="container">
    
      <a class="siteHeader__brand" href="/">
        <span>
          <img src="/images/nhs-logo-med.png" alt="NHS" class="siteHeader__logo">
          <img src="/images/choices-blue-bg.png" alt="NHS" class="siteHeader__choices">
          <span class="alpha">Alpha</span>
        </span>
      </a>
    
    <div class="siteHeader__controls">
      <button class="siteHeader__button btn siteHeader__button--user">
        <span class="icon icon--user"></span>
        <span class="siteHeader__button__label">Login</span>
      </button>
      <button class="siteHeader__button btn" data-toggle="collapse" data-target=".nhsMenu">
        <span class="icon icon--menu"></span>
        <span class="siteHeader__button__label">Menu</span>
      </button>
    </div>
    
    <form class="siteSearch navbar-form" role="search">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="How can we help?">
      </div>
      <button type="submit" class="btn btn-default">
      <span class="sr-only">Search</span>
      <span class="glyphicon glyphicon-search"></span>
      </button>
    </form>
  </div>
</header>
<div class="container">
  <div class="collapse nhsMenu">
    <ul>
      <% var navigation = [
        {
          title: "Help with a new medical problem",
          subtitle: "Find out what to do about your problem, and if you need the doctor",
          icon: "stethoscope"
        },
        {
          title: "Conditions and treatments",
          subtitle: "Help decide if you have a condition, and how to manage it",
          icon: "heartbeat"
        },
        {
          title: "Find, book and manage NHS services",
          subtitle: "Book and manage all your NHS appointments",
          icon: "calendar"
        },
        {
          title: "Improve your health",
          subtitle: "Take steps to improve your own health",
          icon: "health"
        },
        {
          title: "Medicines",
          subtitle: "All about medicines",
          icon: "medicines"
        },
        {
          title: "Pregnancy & Baby",
          subtitle: "What to expect, and trusted NHS advice",
          icon: "pregnancy"
        },
        {
          title: "Care and support",
          subtitle: "Information and support for social care",
          icon: "social"
        },
        {
          title: "Travel Health",
          subtitle: "Everything you need to stay healthy when travelling abroad",
          icon: "travel"
        } 
      ];
      navigation.forEach(function(el) { %>
        <li class="<%= el.icon %>">
          <a href="#">
            <%= el.title %><span class="colon">:</span>
            <span class="subtitle"><%= el.subtitle %></span>
            <span class="glyphicon glyphicon-menu-right"></span>
          </a>
        </li>
      <% }); %>
      </li>
    </ul>
  </div>
</div>
