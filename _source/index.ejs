<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="/stylesheets/main.css">
	<link rel="stylesheet" href="/stylesheets/ui-toolkit.css">
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <link rel="shortcut icon" href="/favicon.ico">
</head>
<body>
    <div class="page">
        <%- partial('_components/disclaimer-bar') %>
        <%- partial('_components/header') %>
        <div class="pageContent">
            <div class="container">
                <h1>NHS Choices User Interface Toolkit</h1>
                <div class="row">
                    <div class="col-sm-8">
                        <%- partial('_toolkit-intro') %>
                    </div>
                </div>
                <hr></hr>
                <h2>Typography</h2>
                <%- partial('_components/toolkit-thing', {
                    title: 'Paragraph',
                    intro: 'The base paragraph font size is 18px.',
                    component: 'typography-paragraph'
                }) %>
                <%- partial('_components/toolkit-thing', {
                    title: 'Headings',
                    component: 'typography-headings',
                    code: true
                }) %>
                <%- partial('_components/toolkit-thing', {
                    title: 'Lists',
                    component: 'typography-lists'
                }) %>
                <%- partial('_components/toolkit-thing', {
                    title: 'Links',
                    component: 'typography-links'
                }) %>
                <%- partial('_components/toolkit-thing', {
                    title: 'Horizontal rule',
                    component: 'typography-hr'
                }) %>
                <h2>Colour</h2>
                <%- partial('_components/toolkit-thing', {
                    title: 'Palette',
                    component: 'colour-palette'
                }) %>
            </div>
        </div>
        <%- partial('_components/footer') %>
    </div>
<script src="/javascripts/libs/jquery-1.11.1.min.js"></script>
<script src="/javascripts/libs/bootstrap.min.js"></script>
<script src="/javascripts/libs/jquery.cookie.min.js"></script>
<script src="/javascripts/alpha-disclaimer.js"></script>
<script src="/javascripts/ui-toolkit.js"></script>
</body>
</html>
